{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KBB Recon Report",
  "type": "object",
  "required": ["matched", "breaks"],
  "properties": {
    "matched": {
      "type": "array",
      "items": { "$ref": "#/definitions/matched" }
    },
    "breaks": {
      "type": "array",
      "items": { "$ref": "#/definitions/break" }
    }
  },
  "definitions": {
    "link": {
      "type": "object",
      "required": ["event"],
      "properties": {
        "event": { "type": "object" },
        "rail": { "type": ["object", "null"] }
      },
      "additionalProperties": true
    },
    "matched": { "$ref": "#/definitions/link" },
    "break": {
      "allOf": [
        { "$ref": "#/definitions/link" },
        {
          "type": "object",
          "required": ["kind"],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [
                "MISSING_RAIL",
                "AMOUNT_MISMATCH",
                "CURRENCY_MISMATCH",
                "DUPLICATE_REF",
                "STALE_VALUEDATE"
              ]
            }
          }
        }
      ]
    }
  },
  "additionalProperties": false
}
